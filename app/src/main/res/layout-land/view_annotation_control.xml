<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/annotationType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/ic_menu_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/annotationColor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_menu_palette" />

        <ImageView
            android:id="@+id/currentColor"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/annotationColor"
            android:layout_alignLeft="@+id/annotationColor"
            android:layout_alignRight="@+id/annotationColor"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp" />

        <ImageButton
            android:id="@+id/annotationSize"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_line_size"
            android:layout_below="@+id/annotationColor" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/annotationClear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:src="@drawable/ic_menu_close" />

</merge>