<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vg_library"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_library"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_library" />

            <TextView
                android:id="@+id/tv_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif-regular"
                android:singleLine="true"
                android:text="@string/library_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_repository"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_repository"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_repository" />

            <TextView
                android:id="@+id/tv_repository"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:text="@string/repository_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_favorites"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_favorites"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_favorites" />

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif-regular"
                android:singleLine="true"
                android:text="@string/favorites_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_saved_items"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_saved_items"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_saved_items" />

            <TextView
                android:id="@+id/tv_saved_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif-regular"
                android:singleLine="true"
                android:text="@string/sdr_ab_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_jobs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_jobs"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_jobs" />

            <TextView
                android:id="@+id/tv_jobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif-regular"
                android:singleLine="true"
                android:text="@string/sch_jobs" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="@color/js_gray" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="@string/settings_card_label" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="@string/sa_show_feedback" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="@string/sa_show_about"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>